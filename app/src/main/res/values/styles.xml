<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base de la aplicación -->
    <style name="Theme.SoundRecorder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Colores de fondo -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Componentes específicos -->
        <item name="materialCardViewStyle">@style/CardStyle</item>
        <item name="floatingActionButtonStyle">@style/FabStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <!-- Tipografía -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
    </style>

    <!-- Estilo para botones con iconos -->
    <style name="IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/primary_text</item>
    </style>

    <!-- Estilo para tarjetas -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <!-- Estilo para FAB -->
    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="tint">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- Estilo para diálogos -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <!-- Estilo para botones en diálogos -->
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_color</item>
        <item name="rippleColor">@color/secondary_color</item>
    </style>

    <!-- Tipografías -->
    <style name="TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Barra de progreso circular -->
    <style name="ProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorSize">32dp</item>
        <item name="trackThickness">3dp</item>
    </style>

</resources>